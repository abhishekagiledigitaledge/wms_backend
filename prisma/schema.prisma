generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Order {
  id                Int       @id @default(autoincrement())
  externalId        String    @unique 
  source            String    // "shopify" | "rex"
  orderNumber       String
  customerName      String?   // customer.first_name + " " + customer.last_name
  customerEmail     String?
  customerPhone     String?
  customerAddress   String?   // optional, combined address
  status            String
  paymentStatus     String?
  fulfillmentStatus String?
  outlet            String?   // REX outlet or Shopify pickup location
  subtotal          Float?
  tax               Float?
  shippingFee       Float?    // freight_total / shipping_lines.price
  discount          Float?
  totalAmount       Float     // order_total / total_price
  currency          String
  createdAt         DateTime
  updatedAt         DateTime
  fulfilledAt       DateTime?
  extraData         Json?     // store full raw API object including items

  @@map("orders")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  role       Role     @default(SALESPERSON)
  is_active  Boolean  @default(true)
  scopes     String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("users")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  SALESPERSON
}